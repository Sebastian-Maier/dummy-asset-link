[Unit]
Description=Dummy Asset Link
After=network.target

[Service]
ExecStartPre=/bin/sh -c "systemctl set-environment IAH_AssetLink_IP=$(hostname -i)"
ExecStart=/usr/bin/dummy-asset-link --grpc-registry-address=localhost:50051 --grpc-server-address=${IAH_AssetLink_IP}:8080 --grpc-server-endpoint-address=${IAH_AssetLink_IP}
Restart=on-failure
KillMode=process

[Install]
WantedBy=multi-user.target
